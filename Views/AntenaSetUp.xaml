<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="HSPGUI.Views.AntenaSetUp"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <!--  Add more RowDefinition elements here as needed  -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            
            <!--  Add more ColumnDefinition elements here as needed  -->
        </Grid.ColumnDefinitions>
        <Picker x:Name="baudRateSelector" Title="Select Baud Rate" Grid.Row="0" Grid.Column="0" Margin="10">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                </x:Array>
            </Picker.ItemsSource>
        </Picker>
        <Picker x:Name="tariSelector" Title="Select Tari Length" Grid.Row="0" Grid.Column="1" Margin="10" >
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                </x:Array>
            </Picker.ItemsSource>
        </Picker>
        <Picker x:Name="bitPatternSelector" Title="Select Bit Pattern" Grid.Row="0" Grid.Column="2" Margin="10" >
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                </x:Array>
            </Picker.ItemsSource>
        </Picker>
        <Picker x:Name="LFSelector" Title="Select Tag Base Band" Grid.Row="0" Grid.Column="3" Margin="10" >
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                </x:Array>
            </Picker.ItemsSource>
        </Picker>
        
        <Picker x:Name="recieverGainSelector" Title="Reciever Gain" Grid.Row="1" Grid.Column="0" Margin="10">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                </x:Array>
            </Picker.ItemsSource>
        </Picker>
        <Picker x:Name="asyncRecieverGain" Title="Async Reciever Gain" Grid.Row="1" Grid.Column="1" Margin="10" >
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                </x:Array>
            </Picker.ItemsSource>
        </Picker>
    </Grid>

</ContentPage>
