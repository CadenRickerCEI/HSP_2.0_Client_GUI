<?xml version="1.0" encoding="UTF-8" ?>
<Shell
	x:Class="HSPGUI.AppShell"
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:views="clr-namespace:HSPGUI.Views"
	xmlns:local="clr-namespace:HSPGUI">

	<ShellContent
		Shell.NavBarIsVisible="true"
		Title="RIFD Status"
		Icon="rfid.png"
		ContentTemplate="{DataTemplate views:StatusPage}"
		Route="StatusPage" />
	<ShellContent
		Shell.NavBarIsVisible="true"
		Title="Load From File"
		Icon="fileplus.png"
		ContentTemplate="{DataTemplate views:LoadFromFilePage}"
		Route="LoadFromFilePage" />
	<ShellContent
		Shell.NavBarIsVisible="true"
		Title="Generate From File"
        Icon="iconblank.png"
		ContentTemplate="{DataTemplate views:GenerateFromFilePage}"
		Route="GenerateFromFilePage" />
	<ShellContent
		Shell.NavBarIsVisible="true"
		Title="Antena Setup"
		Icon="antena.png"
		ContentTemplate="{DataTemplate views:AntenaSetUp}"
		Route="AntenaSetUp" />
    <ShellContent
		Shell.NavBarIsVisible="true"
		Title="Network Config"
		Icon="etherneticon.png"
		ContentTemplate="{DataTemplate views:NetworkConfig}"
		Route="NetworkConfig" />
</Shell>
